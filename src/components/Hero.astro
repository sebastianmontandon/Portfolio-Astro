<section id="hero" class="min-h-screen flex items-center pt-16">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div data-aos="fade-right" data-aos-delay="100">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
          Hello<span class="text-primary-400">.</span>
        </h1>
        <h2 class="text-3xl md:text-4xl font-medium mt-2 mb-4">
          I'm <span class="gradient-text">Sebasti√°n</span>
        </h2>
        <h3 class="text-2xl md:text-3xl text-gray-400 mb-6">
          Backend Developer
        </h3>
        
        <div class="flex flex-wrap gap-4 mt-8">
          <a href="#contact" class="btn btn-primary">
            Got a project?
          </a>
          <a href="#projects" class="btn btn-outline">
            My projects
          </a>
        </div>
        
        <div class="flex flex-wrap gap-3 mt-12">
          <span class="tech-pill">Python</span>
          <span class="tech-pill">Django</span>
          <span class="tech-pill">FastAPI</span>
          <span class="tech-pill">PostgreSQL</span>
          <span class="tech-pill">HTML5</span>
          <span class="tech-pill">CSS</span>
          <span class="tech-pill">Tailwind CSS</span>
          <span class="tech-pill">JavaScript</span>
          <span class="tech-pill">Node.js</span>
          <span class="tech-pill">Git</span>
          <span class="tech-pill">GitHub</span>
        </div>
      </div>
      
      <div class="relative hidden lg:block" data-aos="fade-left" data-aos-delay="300">
        <div class="relative w-80 h-80 mx-auto">
          <div class="absolute inset-0 border-2 border-primary-400 rounded-lg flex items-center justify-center">
            <div class="relative w-full h-full overflow-hidden rounded-lg">
              <img 
                src="/profile-pic.jpg" 
                alt="Profile" 
                class="object-cover w-full h-full opacity-60"
              />
              <div class="absolute inset-0 shadow-[inset_0_0_30px_30px_hsl(var(--color-dark-900))]"></div>
            </div>
          </div>
          <div class="absolute top-[-15px] left-[-15px] h-full w-full border-2 border-primary-300/30 rounded-lg"></div>
          <div class="absolute bottom-[-15px] right-[-15px] h-full w-full border-2 border-primary-300/30 rounded-lg"></div>
        </div>
        
        <!-- Code snippets around the image -->
        <div class="absolute top-[-30px] left-0 font-mono text-xs text-gray-500 bg-dark-700 p-2 rounded">
          &lt;div class="developer"&gt;
        </div>
        <div class="absolute bottom-[-20px] right-0 font-mono text-xs text-gray-500 bg-dark-700 p-2 rounded">
          &lt;/div&gt;
        </div>
      </div>
    </div>
  </div>
</section>