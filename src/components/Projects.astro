---
// Import projects from JSON file
import projectsData from '../data/projects.json';

// Use the imported projects data
const projects = projectsData;
---

<section id="projects" class="section bg-dark-800 relative">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="section-title mt-3" data-aos="fade-right">Projects</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-6">
      {projects.map((project, index) => (
        <div 
          class="card overflow-hidden group"
          data-aos="fade-up"
          data-aos-delay={100 + (index * 50)}
        >
          <div class="relative overflow-hidden aspect-video">
            <img 
              src={project.imageUrl} 
              alt={project.title} 
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-dark-900 to-transparent opacity-60"></div>
            <div class="absolute bottom-0 left-0 right-0 p-4">
              <h3 class="text-xl font-bold">{project.title}</h3>
            </div>
          </div>
          
          <div class="p-5">
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.map(tech => (
                <span class="tech-pill text-xs">{tech}</span>
              ))}
            </div>
            
            <p class="text-gray-300 mb-4">
              {project.description}
            </p>
            
            <div class="flex gap-4 mt-4">
              <a 
                href={project.githubUrl} 
                class="btn bg-dark-600 hover:bg-dark-500 text-sm"
                target="_blank"
                rel="noopener noreferrer"
              >
                View GitHub
              </a>
              <a 
                href={project.liveUrl} 
                class="btn btn-outline text-sm"
                target="_blank"
                rel="noopener noreferrer"
              >
                View project
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>