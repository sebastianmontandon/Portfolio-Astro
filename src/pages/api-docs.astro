      }
      
      .swagger-ui .info .title {
        font-size: 1.8rem !important;
      }
      
      .error {
        margin: 1rem;
        padding: 2rem;
      }
    }
    
    @media (max-width: 480px) {
      .header-content {
        gap: 0.5rem;
      }
      
      .nav-links {
        flex-direction: column;
        width: 100%;
        gap: 0.3rem;
      }
      
      .nav-links a {
        text-align: center;
        padding: 0.6rem;
      }
      
      .swagger-ui .opblock .opblock-summary {
        flex-direction: column !important;
        align-items: flex-start !important;
      }
      
      .swagger-ui .opblock .opblock-summary-path {
        margin-left: 0 !important;
        margin-top: 0.5rem !important;
        word-break: break-all !important;
      }
      
      .swagger-ui .info .title {
        font-size: 1.5rem !important;
      }
    }
  </style>
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="header-content">
      <a href="/" class="logo">Portfolio API</a>
      <nav class="nav-links">
        <a href="/">Inicio</a>
        <a href="/#projects">Proyectos</a>
        <a href="/#contact">Contacto</a>
        <a href="/api-docs">API Docs</a>
      </nav>
    </div>
  </header>

  <!-- Loading indicator -->
  <div id="loading" class="loading">
    <div>
      üìö Cargando documentaci√≥n de la API...
    </div>
  </div>

  <!-- Error display -->
  <div id="error" class="error" style="display: none;">
    <h2>‚ùå Error al cargar la documentaci√≥n</h2>
    <p>No se pudo cargar la especificaci√≥n de la API.</p>
    <button class="retry-btn" onclick="loadSwaggerUI()">üîÑ Reintentar</button>
  </div>

  <!-- Swagger UI container -->
  <div id="swagger-ui"></div>

  <!-- Footer -->
  <footer class="footer">
    <p>
      Documentaci√≥n generada con <strong>Swagger UI</strong> | 
      API del Portfolio de Sebasti√°n Montand√≥n | 
      <a href="https://github.com/sam171990">GitHub</a>
    </p>
  </footer>

  <script>
    // @ts-ignore
    declare const SwaggerUIBundle: any;

    function hideLoading() {
      document.getElementById('loading')!.style.display = 'none';
    }

    function showError() {
      hideLoading();
      document.getElementById('error')!.style.display = 'block';
    }

    function initSwaggerUI() {
      try {
        console.log('üöÄ Iniciando Swagger UI...');
        
        const ui = SwaggerUIBundle({
          url: '/docs/api-spec.yaml',
          dom_id: '#swagger-ui',
          deepLinking: true,
          presets: [
            SwaggerUIBundle.presets.apis,
            SwaggerUIBundle.presets.standalone
          ],
          plugins: [
            SwaggerUIBundle.plugins.DownloadUrl
          ],
          validatorUrl: null,
          tryItOutEnabled: true,
          filter: true,
          supportedSubmitMethods: ['get', 'post', 'put', 'delete', 'patch'],
          onComplete: () => {
            console.log('‚úÖ Swagger UI cargado exitosamente');
            hideLoading();
          },
          onFailure: (error: any) => {
            console.error('‚ùå Error en Swagger UI:', error);
            showError();
          }
        });
        
      } catch (error) {
        console.error('‚ùå Error inicializando Swagger UI:', error);
        showError();
      }
    }

    function loadSwaggerUI() {
      // Cargar script din√°micamente
      const script = document.createElement('script');
      script.src = 'https://unpkg.com/swagger-ui-dist@4.15.5/swagger-ui-bundle.js';
      script.onload = () => {
        console.log('üì¶ Swagger UI script cargado');
        // Esperar un poco para asegurar que est√© completamente disponible
        setTimeout(initSwaggerUI, 100);
      };
      script.onerror = () => {
        console.error('‚ùå Error cargando script de Swagger UI');
        showError();
      };
      document.head.appendChild(script);
    }

    // Iniciar carga cuando DOM est√© listo
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', loadSwaggerUI);
    } else {
      loadSwaggerUI();
    }
  </script>
</body>
</html> 